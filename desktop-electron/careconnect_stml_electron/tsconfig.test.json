{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "verbatimModuleSyntax": false,
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "types": ["jest", "node", "@testing-library/jest-dom"]
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/test/**/*.ts",
    "src/test/**/*.d.ts",
    "electron/**/*.test.ts"
  ]
}
