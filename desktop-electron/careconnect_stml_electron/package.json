{
  "name": "desktop-electron",
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "vite": "vite",
    "electron": "electron .",
    "dev": "concurrently -k \"npm run vite\" \"npm run build:electron:watch\" \"wait-on http://localhost:4173 && npm run build:electron && npm run electron\"",
    "build:electron": "tsc -p tsconfig.electron.json && node -e \"const fs=require('fs');['main','preload'].forEach(f=>{const src='dist-electron/'+f+'.js';const dst='dist-electron/'+f+'.cjs';if(fs.existsSync(src)){fs.renameSync(src,dst);}});\"",
    "build:electron:watch": "tsc -p tsconfig.electron.json --watch"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/electron": "^1.4.38",
    "@types/node": "^24.10.13",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^40.6.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "wait-on": "^9.0.4"
  }
}
